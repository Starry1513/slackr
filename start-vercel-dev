#!/bin/bash

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${BLUE}========================================${NC}"
echo -e "${BLUE}  Slackr - Vercel Dev Server${NC}"
echo -e "${BLUE}========================================${NC}"
echo ""

# Check if Vercel CLI is installed
if ! command -v vercel &> /dev/null; then
    echo -e "${RED}Vercel CLI not found. Please run ./setup-vercel.sh first${NC}"
    exit 1
fi

# Check if logged in
vercel whoami &> /dev/null
if [ $? -ne 0 ]; then
    echo -e "${RED}Not logged in to Vercel. Please run ./setup-vercel.sh first${NC}"
    exit 1
fi

echo -e "${GREEN}Starting Vercel development server...${NC}"
echo -e "${YELLOW}This simulates the Vercel production environment locally${NC}"
echo ""
echo -e "Server will be available at: ${BLUE}http://localhost:3000${NC}"
echo -e "Press ${RED}Ctrl+C${NC} to stop the server"
echo ""

# Start Vercel dev server
vercel dev
